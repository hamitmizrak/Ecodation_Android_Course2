<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--kodlar buraya-->

            <Button
                android:id="@+id/buttonOtherActivityId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Other Activity"/>


            <Button
                android:id="@+id/buttonApplicationData1Id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Uygulama 1"/>


            <Button
                android:id="@+id/buttonActivityBlueId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Connection Activity Blue"
                android:backgroundTint="@color/red"/>

            <Button
                android:id="@+id/buttonActivityImageId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Pictures Turorials"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"/>

           <!-- FAB: FloatingActionButton-->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingActionButtonId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!--Progress BAr-->
            <ProgressBar
                android:id="@+id/progressBarId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--radio button-->
            <RadioGroup
                android:id="@+id/radioGroupId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/RadioButtonFemale"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:checked="true"
                    android:text="Bayan" />

                <RadioButton
                    android:id="@+id/RadioButtonMale"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="Erkek"/>
            </RadioGroup>

            <Button
                android:id="@+id/buttonRadioSubmit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Submit"
                android:backgroundTint="@color/red"
                android:textColor="@color/white"/>


            <!-- ListView -->
            <Button
                android:id="@+id/buttonActivityListViewId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="ListView"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"/>


            <!-- ReCyclerView -->
            <Button
                android:id="@+id/buttonActivityReCyclerViewId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="ReCyclerView"
                android:backgroundTint="#E91E63"
                android:textColor="@color/black"/>

            <!-- MenuItem-->
            <Button
                android:id="@+id/buttonMenuButtonId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Mwnu Item"
                android:backgroundTint="#1E40E9"
                android:textColor="@color/black"/>


            <!-- camera -->
            <Button
                android:id="@+id/buttonCameraId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Camera"
                android:backgroundTint="#E91E63"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/buttonActivityFirebasetutorialsId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Firebase Tutorials"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"/>

            <!-- ListView -->
            <Button
                android:id="@+id/buttonActivityFirebaseLocalStorageId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="LocalStorage"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"/>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>